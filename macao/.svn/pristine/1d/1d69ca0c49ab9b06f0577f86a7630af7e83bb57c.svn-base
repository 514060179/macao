	<script>
		function getFileType(filePath) {
			var startIndex = filePath.lastIndexOf(".");
			if (startIndex != -1)
				return filePath.substring(startIndex + 1, filePath.length)
						.toLowerCase();
			else
				return "";
		}
		$("#submits")
				.click(
						function() {
							var firstName = document
									.getElementById("firstName").value;
							var lastName = document.getElementById('lastName').value;
							var countryCode = $('#countryCode option:selected')
									.val();
							var tel = document.getElementById('tel').value;
							var id = document.getElementById('id').value;
							var license = document
									.getElementById('license_true').value;
							var license_till = document
									.getElementById('license_till').value;
							var boochange = $("#boochange").val();
							var countryCode2 = $('#countryCode2 option:selected').val();
							var tel2 = $("#tel2").val();
							if(countryCode2!=""){
								if(tel2==""){
									$("#tel2").focus();
									alert("请输入電話號碼!");
									return false;
								}
							}
							if (firstName == "") {
								$("#firstName").focus();
								alert("请輸入姓!");
								return false;
							}
							if (lastName == "") {
								$("#lastName").focus();
								alert("请輸入名字 ！");
								return false;
							}
							if (tel == "") {
								$("#tel").focus();
								alert("请输入電話號碼!");
								return false;
							}
							if (license == "") {
								$("#license").focus();
								alert("請輸入駕照號碼!");
								return false;
							}
							if (license_till == "") {
								$("#license_till").focus();
								alert("请輸入駕照到期時間!");
								return false;
							}
							var reg1 = /^0?1[3|4|5|7|8][0-9]\d{8}$/;
							if (countryCode == 853 || countryCode == 852) {
								var reg = /^0?6\d{7}$/;
								if (!reg.test(tel)) {
									// alert("");
									$("#tel").focus();
									$("#tel").next().text("該手機號不合法！");
									return false;
								} else {
									$("#tel").next().text("");
								}
							} else {
								if (!reg1.test(tel)) {
									$("#tel").focus();
									$("#tel").next().text("該手機號不合法！");
									return false;
								} else {
									$("#tel").next().text("");
								}
							}
							if(countryCode2!=""){
								if (countryCode2 == 853 || countryCode2 == 852) {
									var reg = /^0?6\d{7}$/;
									if (!reg.test(tel2)) {
										// alert("");
										$("#tel2").focus();
										$("#tel2").next().text("該手機號不合法！");
										alert("該手機號不合法！");
										return false;
									} else {
										$("#tel2").next().text("");
									}
							   } else {
									if (!reg1.test(tel2)) {
										$("#tel2").focus();
										$("#tel2").next().text("該手機號不合法！");
										alert("該手機號不合法！");
										return false;
									} else {
										$("#tel2").next().text("");
									}
							   }
							}
							

							//判断手机号是否存在，并且判断文件是否属于图片类型
							var boo = false;
							$
									.post(
											"${base}/admin/driver/checkTel?tel="
													+ tel + "&countryCode="
													+ countryCode + "&id=" + id,
											function(data) {
												if (data.code == "105") {
													boo = true;
													alert("該手機號已存在!");
													$("#tel").focus();
													$("#tel").next().text(
															"該手機號不合法！");
													return false;
												}
												if (boo) {
													return false;
												}
												//$("#registrationForm").submit();
												var filePath = $("#file").val();
												if ("" != filePath) {
													var fileType = getFileType(filePath);
													//判断上传的附件是否为图片  
													if ("jpg" != fileType
															&& "jpeg" != fileType
															&& "bmp" != fileType
															&& "png" != fileType
															&& "gif" != fileType) {
														alert("请上传JPG,JPEG,BMP,PNG,GIF格式的图片");
														return false;
													} else {
														//获取附件大小（单位：KB）  
														var fileSize = document
																.getElementById("file").files[0].size / 1024;
														if (fileSize > 2048) {
															alert("图片大小不能超过2MB");
															return false;
														}
													}
												}
												//document.getElementById("registrationForm").submit();
												var formData = new FormData(
														$("#registrationForm")[0]);
												$
														.ajax({
															url : '${base}/admin/driver/save',
															type : 'POST',
															data : formData,
															async : false,
															cache : false,
															contentType : false,
															processData : false,
															success : function(returndata) {
																if (returndata.code == "1"||returndata.code == "2") {
																	alert(returndata.msg);
																	window.location.href = '${base}/admin/driver/list';
																}else{
																	alert(returndata.msg);
																}
															},
															error : function(returndata) {
																alert(returndata);
															}
														});
											});

					
						});
		$('#date-picker').datepicker();
		$(document)
				.ready(
						function() {
							document.getElementById('file').onchange = function(
									evt) {
								// 如果浏览器不支持FileReader，则不处理
								if (!window.FileReader)
									return;
								document.getElementById("boochange").value = 'true';
								var files = evt.target.files;
								for (var i = 0, f; f = files[i]; i++) {
									if (!f.type.match('image.*')) {
										continue;
									}
									var reader = new FileReader();
									reader.onload = (function(theFile) {
										return function(e) {
											// img 元素
											document
													.getElementById('previewFile').style.display = 'block';
											document
													.getElementById('previewFile').src = e.target.result;
										};
									})(f);
									reader.readAsDataURL(f);
								}
							}

						})

		function checkTel() {
			var tel = document.getElementById("tel").value;
			var reg = /^0?1[3|4|5|7|8][0-9]\d{8}$/;
			var countryCode = $('#countryCode option:selected').val();
			if (tel != null && tel != '') {
				if (countryCode == 853 || countryCode == 852) {
					reg = /^0?6\d{7}$/;
					if (!reg.test(tel)) {
						// alert("");
						$("#tel").focus();
						$("#tel").next().text("該手機號不合法！");
						alert("該手機號不合法！");
						return false;
					} else {
						$("#tel").next().text("");
					}
				} else {
					if (!reg.test(tel)) {
						$("#tel").focus();
						$("#tel").next().text("該手機號不合法！");
						alert("該手機號不合法！");
						return false;
					} else {
						$("#tel").next().text("");
					}
				}
			}
			$.post("${base}/admin/driver/checkTel?tel=" + tel + "&countryCode="
					+ countryCode, function(data) {
				if (data.code == "105") {
					alert("該手機號已存在!");
					$("#tel").focus();
					$("#tel").next().text("該手機號不合法！");
				}
			});
		}
	</script>


