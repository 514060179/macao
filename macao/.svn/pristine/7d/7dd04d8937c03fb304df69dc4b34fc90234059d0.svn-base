            return;
        }
        if (StringUtil.empty(deviceId)) {
            ResponseVo.send101Code(response, "deviceId未能成功接收");
            return;
        }
        if (StringUtil.empty(deviceType)) {
            ResponseVo.send101Code(response, "deviceType未能成功接收");
