			//            closeBtn: 0,
			//            shadeClose: true,
			//            skin: 'yourclass',
			//            content: '../index.html'
			//        });
		})
		
		 function delManager(id) {
        var sure = confirm("確定刪除?");
        if(sure) {
            $.post("${base}/admin/driver/del", {
                    "id" : id
                },
                function(data) {
                    if (data.code == "1") {
                        alert("刪除成功!");
                        $("#" + id + "Tr").remove();
                    } else {
                        alert("刪除失敗!");
                    }
                });
        }
	}
		function search(){
			 document.getElementById("searchs").submit();
		}
		function pushInfo(){
        	layer.open({
             	  title: '推送消息',
        //     	  area: ['350px', '350px'],
             	  content: '<textarea style="width:250px;height:100px;" id="pushInfos" placeholder="推送內容" ></textarea>',
             	  yes : function(index){
             		 var pushInfos = $('#pushInfos').val()
             	//	alert(score)
             	//	alert(comments)
             	 var json = {
             			  "msg" : pushInfos,
					 		"type":"driver"
             	  }
             		$.post("${base}/admin/driver/pushMsgToDriver",json,function(data){
             	          		if (data.code == "1") {
             	           			alert("success");
             	           		   layer.close(index);
            	                    window.location.reload();
             	                }else{
             	           			alert("推送失敗！稍後重試"+data.code);
             	           			layer.close(index);
             	           		}

             							});
 
             		var json2 = {
             				"broadcastContent" : pushInfos,
             				"broadcastType" :0
             		}
             		
             		$.post("${base}/admin/broadcast/save",json2,function(data){
     	          		if (data.code == "1") {
     	           		//	alert("success");
     	                 
     	                }else{
     	           	//		alert("推送失敗！稍後重試"+data.code);
     	                    
     	           		}

     							});
             	  }
             	});    
		}
		function runQuery(){
			search();
		}
		function searchenter(event) {
	        event = event || window.event;
	        if (event.keyCode == 13) {
	            search();
	        }
	    }
	</script>


</body>
