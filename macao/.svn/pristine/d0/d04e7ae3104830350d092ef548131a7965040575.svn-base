		</mvc:interceptors>-->


	<bean id="accessAop" class="com.yinghai.macao.aop.AccessTokenAop"/>
	<aop:config>
		<aop:aspect ref="accessAop">
			<aop:around method="execute"
					 pointcut="execution(* com.yinghai.macao.*.controller.*.*(..))"/> 
		</aop:aspect> 
	</aop:config>
</beans>